        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/app_theam"
        android:shadowColor="@color/app_text_border"
        android:text="@string/viewMore"
        android:textColor="@color/app_theam_light"
        android:textSize="17dp"
        app:cornerRadius="15sp"
        app:iconTint="@color/app_theam"
        app:layout_constraintEnd_toEndOf="@+id/imageView23"
        app:layout_constraintTop_toTopOf="@+id/imageView23"
        app:strokeColor="@color/app_theam_light" />

