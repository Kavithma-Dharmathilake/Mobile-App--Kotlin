<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recHistCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardBackgroundColor="@color/edit_text_background"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="360dp"
        android:layout_height="107dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="41dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:srcCompat="@drawable/edit_text_bkg" />

    <TextView
        android:id="@+id/elec_amnt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Rs. 4555.00"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@+id/imageView21"
        app:layout_constraintTop_toBottomOf="@+id/elec_bill2" />

    <TextView
        android:id="@+id/elec_bill2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:text="@string/electricty"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView21"
        app:layout_constraintTop_toTopOf="@+id/imageView21" />

    <Button
        android:id="@+id/viewMore2"
        android:layout_width="134dp"
        android:layout_height="62dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/purple"
        android:shadowColor="@color/app_text_border"
        android:text="@string/exp_delete"
        android:textColor="@color/app_theam_light"
        android:textSize="17dp"
        app:cornerRadius="15sp"
        app:iconTint="@color/app_theam"
        app:layout_constraintBottom_toBottomOf="@+id/imageView21"
        app:layout_constraintEnd_toEndOf="@+id/imageView21"
        app:strokeColor="@color/app_theam_light" />

    <TextView
        android:id="@+id/expense_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023/02/25"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/elec_amnt2"
        app:layout_constraintTop_toBottomOf="@+id/elec_amnt2" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>